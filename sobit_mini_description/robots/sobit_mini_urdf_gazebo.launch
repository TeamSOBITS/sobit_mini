<launch>
   <transmission name="${prefix}_pan_joint_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_pan_joint">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_pan_joint_actuator">
        <hardwareInterface>PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
  <!-- <arg name="model" default="$(find soby_description)/robots/soby.urdf.xacro"/> -->
  <arg name="model" default="$(find xacro)/xacro '$(find sobit_mini_description)/robots/sobit_mini.urdf.xacro'" />
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <!-- <include file="$(find gazebo_ros)/launch/empty_world.launch"> -->
    <!-- <arg name="debug" value="$(arg debug)" /> -->
    <!-- <arg name="gui" value="$(arg gui)" /> -->
    <!-- <arg name="paused" value="$(arg paused)"/> -->
    <!-- <arg name="use_sim_time" value="$(arg use_sim_time)"/> -->
    <!-- <arg name="headless" value="$(arg headless)"/> -->
  <!-- </include> -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- <arg name="world_name" value="$(find soby_description)/worlds/robocup_choi.world"/> -->
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- <rosparam file="$(find sobit_education_library)/config/sobit_education_pose.yaml" command="load"/> -->

  <!-- Load the URDF into the ROS Parameter Server -->
<!-- spawn robot -->
  <include file="$(find soby_gazebo)/launch/spawn_sdf.launch" >
    <arg name="robot_name" default="soby"/>
    <arg name="x" default="0.0"/>
    <arg name="y" default="0.0"/>
    <arg name="z" default="0.0"/>
    <arg name="roll" default="0.0"/>
    <arg name="pitch" default="0.0"/>
    <arg name="yaw" default="0.0"/>
    <arg name="sdf_robot_file" default="$(find soby_description)/robots/soby.sdf"/>
  </include>

  <!-- ros_control motoman launch file -->
  <!-- <include file="$(find soby_description)/launch/sobit_education_control_gazebo.launch"/> -->
  <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find soby_description)/rviz/display.rviz"/> -->
  
</launch>
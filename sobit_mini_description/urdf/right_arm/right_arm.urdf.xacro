<?xml version="1.0" encoding="UTF-8" ?>
<robot name="right_arm" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find sobit_mini_description)/urdf/right_arm/right_arm.transmission.xacro" />

  <xacro:macro name="right_arm" params="prefix parent">

    <joint name="${prefix}_shoulder_fixed_joint" type="fixed">
      <parent link="${parent}" />
      <child link="${prefix}_shoulder_fixed_link" />
      <origin rpy="0 0 0" xyz="0.0 0.0 0.375988" />
      <axis xyz="0 0 1" />
      <limit effort="30" lower="-0.1" upper="0.1" velocity="1.571" />
    </joint>

    <link name="${prefix}_shoulder_fixed_link">
      <collision>
        <origin rpy="0.0 0.0 ${M_PI/2.0}" xyz="0 0 0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_arm/R_ARM_SHOULDER_ROLL_JOINT.stl" />
        </geometry>
      </collision>

      <visual>
        <origin rpy="0.0 0.0 ${M_PI/2.0}" xyz="0 0 0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_arm/R_ARM_SHOULDER_ROLL_JOINT.stl" />
        </geometry>
        <material name="black"/>
      </visual>

      <inertial>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" 
                 iyy="1.0" iyz="0.0" 
                 izz="1.0" />
      </inertial>
    </link>

    <joint name="${prefix}_shoulder_roll_joint" type="revolute">
      <parent link="${prefix}_shoulder_fixed_link" />
      <child link="${prefix}_shoulder_roll_link" />
      <origin rpy="0 0 0" xyz="0.0 -0.1415 0.015161" />
      <axis xyz="0 -1 0" />
      <limit effort="30" lower="${-M_PI/2.0}" upper="${M_PI}" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_shoulder_roll_link">
      <collision>
        <origin rpy="0.0 0 ${M_PI/2.0}" xyz="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_arm/R_ARM_SHOULDER_FLEX_JOINT.stl" />
        </geometry>
      </collision>

      <visual>
        <origin rpy="0.0 0 ${M_PI/2.0}" xyz="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_arm/R_ARM_SHOULDER_FLEX_JOINT.stl" />
        </geometry>
        <material name="black"/>
      </visual>

      <inertial>
        <origin rpy="0 0 0" xyz="0.0 0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" 
                 iyy="1.0" iyz="0.0" 
                 izz="1.0" />
      </inertial>
    </link>

    <joint name="${prefix}_shoulder_pan_joint" type="revolute">
      <parent link="${prefix}_shoulder_roll_link" />
      <child link="${prefix}_shoulder_pan_link" />
      <origin rpy="0 0 0" xyz="0.0 -0.05375 0.0" />
      <axis xyz="1 0 0" />
      <limit effort="30" lower="${-M_PI/2.0}" upper="${M_PI/2.0}" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_shoulder_pan_link">
      <collision>
        <origin rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" xyz="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_arm/R_ARM_ELBOW_TILT_JOINT.stl" />
        </geometry>
      </collision>

      <visual>
        <origin rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" xyz="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_arm/R_ARM_ELBOW_TILT_JOINT.stl" />
        </geometry>
        <material name="black"/>
      </visual>

      <inertial>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" 
                 iyy="1.0" iyz="0.0" 
                 izz="1.0" />
      </inertial>
    </link>

    <joint name="${prefix}_elbow_tilt_joint" type="revolute">
      <parent link="${prefix}_shoulder_pan_link" />
      <child link="${prefix}_elbow_tilt_link" />
      <origin rpy="0 0 0" xyz="0 -0.11125 0" />
      <axis xyz="0 0 1" />
      <limit effort="30" lower="0.0" upper="${M_PI/2.0}" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_elbow_tilt_link">
      <collision>
        <origin rpy="0.0 0.0 ${M_PI/2.0}" xyz="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_arm/R_ARM_WRIST_TILT_JOINT.stl" />
        </geometry>
      </collision>

      <visual>
        <origin rpy="0.0 0.0 ${M_PI/2.0}" xyz="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_arm/R_ARM_WRIST_TILT_JOINT.stl" />
        </geometry>
      <material name="black"/>
      </visual>

      <inertial>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" 
                 iyy="1.0" iyz="0.0" 
                 izz="1.0" />
      </inertial>
    </link>

    <joint name="${prefix}_wrist_tilt_joint" type="revolute">
      <parent link="${prefix}_elbow_tilt_link" />
      <child link="${prefix}_wrist_tilt_link" />
      <origin rpy="0 0 0" xyz="0 -0.10275 0" />
      <axis xyz="0 0 1" />
      <limit effort="30" lower="${-M_PI/2.0}" upper="${M_PI/2.0}" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_wrist_tilt_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 ${M_PI/2.0} 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_hand/R_hand_JOINT.stl"/>
        </geometry>
        <material name="black" />
      </visual>

      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 ${M_PI/2.0} 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_hand/R_hand_JOINT.stl"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0" 
                 izz="1.0" />
      </inertial>
    </link>

    <xacro:right_arm_transmission prefix="${prefix}"/>

  </xacro:macro>
</robot>
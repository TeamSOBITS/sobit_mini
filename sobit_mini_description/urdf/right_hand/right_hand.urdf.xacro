<?xml version="1.0" encoding="UTF-8" ?>
<robot name="right_hand" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find sobit_mini_description)/urdf/right_hand/right_hand.transmission.xacro" />
  <xacro:macro name="right_hand" params="prefix parent">
    <joint name="${prefix}_base_fixed_joint" type="fixed">
      <parent link="${parent}" />
      <child link="${prefix}_base_fixed_link" />
      <origin rpy="0 0 0" xyz="0 0 -0.05" />
      <axis xyz="0 1 0" />
      <limit effort="30" lower="${-M_PI/2.0}" upper="${M_PI/2.0}" velocity="${M_PI/2.0}" />
    </joint>
    <link name="${prefix}_base_fixed_link">
      <collision>
        <origin rpy="0 ${M_PI} 0" xyz="0 0 0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/Manipulator_X4_Gripper_fix.dae" />
        </geometry>
      </collision>
      <visual>
        <origin rpy="0 ${M_PI} 0" xyz="0 0 0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/Manipulator_X4_Gripper_fix.dae" />
        </geometry>
      </visual>
      <inertial>
        <origin rpy="0 ${M_PI} 0" xyz="0 0 0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>
    </link>
    <joint name="${prefix}_motor_joint" type="revolute">
      <parent link="${prefix}_base_fixed_link" />
      <child link="${prefix}_motor_dummy_link" />
      <axis xyz="1 0 0" />
      <limit lower="0.0" upper="${M_PI/2.0}" effort="1" velocity="1" />
    </joint>
    <link name="${prefix}_motor_dummy_link" />
    <joint name="${prefix}_left_finger_joint" type="revolute">
      <parent link="${prefix}_base_fixed_link" />
      <child link="${prefix}_left_finger_link" />
      <origin rpy="0 0 0" xyz="0 0.018 -0.043" />
      <axis xyz="1 0 0" />
      <limit lower="-1" upper="0" effort="1" velocity="1" />
      <mimic joint="${prefix}_motor_joint" multiplier="1.0" offset="-1.0" />
    </joint>
    <link name="${prefix}_left_finger_link">
      <collision>
        <origin rpy="0 ${M_PI} ${M_PI}" xyz="0 0 0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/ManipulatorX4_Finger_left.dae" />
        </geometry>
      </collision>
      <visual>
        <origin rpy="0 ${M_PI} ${M_PI}" xyz="0 0 0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/ManipulatorX4_Finger_left.dae" />
        </geometry>
      </visual>
      <inertial>
        <origin rpy="0 ${M_PI} ${M_PI}" xyz="0 0 0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>
    </link>
    <joint name="${prefix}_right_finger_joint" type="revolute">
      <parent link="${prefix}_base_fixed_link" />
      <child link="${prefix}_right_finger_link" />
      <origin rpy="0 0 0" xyz="0 -0.018 -0.043" />
      <axis xyz="1 0 0" />
      <limit lower="0.0" upper="1" effort="1" velocity="1" />
      <mimic joint="${prefix}_motor_joint" multiplier="-1.0" offset="1.0" />
    </joint>
    <link name="${prefix}_right_finger_link">
      <collision>
        <origin rpy="0 ${M_PI} 0" xyz="0 0 0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/ManipulatorX4_Finger_left.dae" />
        </geometry>
      </collision>
      <visual>
        <origin rpy="0 ${M_PI} 0" xyz="0 0 0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/ManipulatorX4_Finger_left.dae" />
        </geometry>
      </visual>
      <inertial>
        <origin rpy="0 ${M_PI} 0" xyz="0 0 0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
      </inertial>
    </link>
    <xacro:right_hand_transmission prefix="${prefix}"/>
  </xacro:macro>
</robot>
<?xml version="1.0" encoding="UTF-8" ?>
<robot name="right_hand" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find sobit_mini_description)/urdf/right_hand/right_hand.transmission.xacro" />

  <xacro:macro name="right_hand" params="prefix parent">

    <joint name="${prefix}_motor_dummy_joint" type="fixed">
      <parent link="${parent}" />
      <child link="${prefix}_motor_dummylink" />
      <origin xyz="0.0 -0.04725 0.0" rpy="${-M_PI/2.0} ${M_PI/2.0} 0" />
      <axis xyz="0 1 0" />
      <limit lower="0.0" upper="${M_PI/2.0}" effort="1" velocity="1" />
    </joint>

    <link name="${prefix}_motor_dummylink">
      <visual>
        <origin xyz="0.0 0.0 0.04725" rpy="${M_PI/2.0} 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_hand/R_hand_JOINT.stl"/>
        </geometry>
        <material name="black" />
      </visual>

      <collision>
        <origin xyz="0.0 0.0 0.04725" rpy="${M_PI/2.0} 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_hand/R_hand_JOINT.stl"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0" 
                 izz="1.0" />
      </inertial>
    </link>

    <joint name="${prefix}_joint" type="revolute">
      <parent link="${prefix}_motor_dummylink" />
      <child link="${prefix}_motor_link" />
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <axis xyz="0 1 0" />
      <limit lower="0.0" upper="${M_PI/2.0}" effort="1" velocity="1" />
    </joint>

    <link name="${prefix}_motor_link" />

    <joint name="${prefix}_left_finger_joint" type="revolute">
      <parent link="${prefix}_motor_dummylink" />
      <child link="${prefix}_left_finger_link" />
      <origin xyz="0.015855 0.0 0.0" rpy="0 0 0" />
      <axis xyz="0 1 0" />
      <limit lower="-1" upper="0" effort="1" velocity="1" />
      <mimic joint="${prefix}_joint" multiplier="-1.0"/>
    </joint>

    <link name="${prefix}_left_finger_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_hand/R_hand_finger_l_joint.stl" />
        </geometry>
        <material name="black" />
      </visual>

      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_hand/R_hand_finger_l_joint.stl" />
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" 
                 iyy="1.0" iyz="0.0" 
                 izz="1.0" />
      </inertial>
    </link>



    <joint name="${prefix}_right_finger_joint" type="revolute">
      <parent link="${prefix}_motor_dummylink" />
      <child link="${prefix}_right_finger_link" />
      <origin xyz="-0.015855 0.0 0.0" rpy="0 0 0" />
      <axis xyz="0 1 0" />
      <limit lower="-1.0" upper="0.0" effort="1" velocity="1" />
      <mimic joint="${prefix}_joint" multiplier="1.0" />
    </joint>

    <link name="${prefix}_right_finger_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_hand/R_hand_finger_r_joint.stl" />
        </geometry>
        <material name="black" />
      </visual>

      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_hand/R_hand_finger_r_joint.stl" />
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" 
                 iyy="1.0" iyz="0.0" 
                 izz="1.0" />
      </inertial>
    </link>

    <!-- <xacro:right_hand_transmission prefix="${prefix}"/> -->
    <xacro:r_hand_transmission prefix="${prefix}"/>

  </xacro:macro>
</robot>